# ============================================
# AGENCIA DEV - CONFIGURACIÓN DEL BACKEND
# ============================================
# Copiar a .env y completar los valores

# Flask
FLASK_ENV=development
SECRET_KEY=tu-clave-secreta-muy-larga-y-segura-aqui

# Base de datos
# SQLite (desarrollo):
DATABASE_URL=sqlite:///agencia.db
# PostgreSQL (producción):
# DATABASE_URL=postgresql://user:password@localhost:5432/agencia

# Admin por defecto
ADMIN_EMAIL=admin@agenciadev.es
ADMIN_PASSWORD=tu-password-seguro

# Email (Gmail con App Password)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password
MAIL_DEFAULT_SENDER=noreply@agenciadev.es

# CORS (orígenes permitidos, separados por coma)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT
JWT_SECRET_KEY=otra-clave-secreta-diferente

# Rate Limiting (opcional, para producción usar Redis)
# REDIS_URL=redis://localhost:6379/0
